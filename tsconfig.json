{
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/auth/verification/_components/layout.tss",
		"tailwind.config.ts"
	],
	"exclude": ["node_modules"]
}
